<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/radius_dp_2"
    app:cardElevation="@dimen/elevation_dp_4"
    app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_dp_16"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="@dimen/avatar_width_dp"
                android:layout_height="@dimen/avatar_height_dp"
                android:background="@color/colorGray200"
                app:srcCompat="@drawable/ic_avatar_gray_24dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_dp_16"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName"
                    style="@style/TextMediumPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvId"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/margin_dp_16"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

</android.support.v7.widget.CardView>
